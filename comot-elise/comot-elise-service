### BEGIN INIT INFO
# Provides:          comot-elise
# Required-Start:
# Required-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Manage comot-elise daemon
# Description:       To start/stop and check status of comot-elise daemon
### END INIT INFO

RUN_MODE="daemons"

JAVA=$(which java)
NAME=comot-elise
DAEMONDIR=/opt/comot-elise
DAEMON=comot-elise.jar
PIDDIR=/tmp/
PIDFILE=$PIDDIR/comot-elise.pid
ELISE_HTTP_PORT=8888
LOG_DIR=/tmp/comot-elise

test -x $JAVA -a -f $DAEMONDIR/$DAEMON || echo "test -x $JAVA -a -f $DAEMONDIR/$DAEMON failed"  
test -x $JAVA -a -f $DAEMONDIR/$DAEMON || exit 0

. /lib/lsb/init-functions
log_use_fancy_output

case "$1" in
	start)
		log_daemon_msg "Starting comot-elise daemon"
		log_progress_msg "elise"
		# Make sure we have our PIDDIR, even if it's on a tmpfs
		# install -o root -g root -m 755 -d $PIDDIR
        if ! start-stop-daemon --start --chdir $DAEMONDIR --quiet --pidfile $PIDFILE --make-pidfile --background --exec $JAVA -- -DLOG_DIR=$LOG_DIR -jar $DAEMON --server.port=$ELISE_HTTP_PORT; then
		    log_end_msg 1
		    exit 1
		fi
		log_end_msg 0
		;;
	stop)
		log_daemon_msg "Stopping comot-elise daemon"
		log_progress_msg "elise"

		start-stop-daemon --stop --quiet --pidfile $PIDFILE
		# Wait a little and remove stale PID file
		sleep 1
		if [ -f $PIDFILE ] && ! ps h `cat $PIDFILE` > /dev/null
		then
			# Stale PID file (Mela was succesfully stopped),
			# remove it
			rm -f $PIDFILE
		fi
		log_end_msg 0
		;;
	restart)
		$0 stop
		sleep 1
		$0 start
		;;
	status)
		pidofproc -p $PIDFILE $JAVA >/dev/null
		status=$?
		if [ $status -eq 0 ]; then
			log_success_msg "comot-elise service is running"
		else
			log_failure_msg "comot-elise service is NOT running"
		fi
		exit $status
		;;
	*)
		echo "Usage: $0 {start|stop|restart|status}"
		exit 1
		;;
esac
 
exit 0
